            <li><a href="/contravertions/new">Registrar nuevo </a></li>
            <li><a href="/contravertions">Ver Lista</a></li>
            
          </ul>
        </li>
         <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Patrullas<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/patrol_units/new">Registrar nueva patrulla </a></li>
            <li><a href="/patrol_units">Ver Lista</a></li>
            
          </ul>
        </li>
        <%end%>
        
        <% if  current_user.role == 2  || current_user.role == 1%>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Denuncias<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/complains/new">Registrar nueva denuncia </a></li>
            <li><a href="/complains">Ver denuncias</a></li>
           
          </ul>
        </li>
       <%end%>
      </ul>

     <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li><a id="sign-out" rel="nofollow" href="/logout">
          <i class="fa fa-fw fa-lock"></i>Cerrar Sesion
        </a></li>
        <li> <a href="/users/edit"><span class="glyphicon glyphicon-log-in"></span>   <%= current_user.person.first_name %>&nbsp;<%= current_user.person.last_name %>  </a></li>
      </ul>
      <%end%>
    </div>

  </div>
</nav>
<%end%>

   </section>

   <!-- Main content -->
   <section class="content">
     <div class="row">
         <div class="col-md-1"></div>
         <div class="col-md-10">
           <%= yield %> 
           <% if  user_signed_in? && current_user.role == 1%>

           
            <% end%>
     <% unless flash.empty? %>
    <script type="text/javascript">
        <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
         toastr['<%= type %>']('<%= f[1] %>');
        <% end %>
    </script>
   <% end %>
  
  
    </div><br>

         </div>
         <div class="col-md-1"></div>
     </div>
