<!DOCTYPE html>
<html>
<head>
  <title>Sistema de Registro de Denuncias 911</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield :javascript_includes %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag('icons/escudo-cochabamba.ico') %>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&key=
AIzaSyDJCxMIk3GTjMB77nK64W9DosMwb6w5oe0&libraries=places"
  type="text/javascript"></script>

  <script type="text/javascript"src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>



<meta name="viewport" content="width=device-width, initial-scale=1">
  
</head>
<body >


<div class="content-wrapper white-wall" style="min-height: 1078px;">
   <!-- Content Header (Page header) -->
   <section class="content-header">
 <% if user_signed_in? %>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
     
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
         <% if current_user.role == 1 %>
        
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Usuarios <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/users">Ver usuarios</a></li>
        
          </ul>
        </li>
         <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Oficiales<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/employees/new">Registrar nuevo </a></li>
            <li><a href="/employees">Ver Lista</a></li>
            
          </ul>
        </li>
      
         <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Delitos<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/crimes/new">Registrar nuevo </a></li>
            <li><a href="/crimes">Ver Lista</a></li>
            
          </ul>
        </li>
         <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Contravenciones<span class="caret"></span></a>
